@using HoldYourHorses.Views.Accounts

@model LoginVM
@section CSS{
    <link rel="stylesheet" href="~/CSS/login.css">
}
<div style="min-height: 400px" class="login-body">
<h1>Log In</h1>
<form asp-controller="Accounts" asp-action="Login">
    <div class="info-div">
    <label class="login-label" asp-for="Username"></label>
    <input asp-for="Username" />
    <span asp-validation-for="Username"></span>
    </div>
     <div class="info-div">
    <label class="login-label" asp-for="Password"></label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>
    </div>
    <input type="submit" value="Log In" />
</form>
<div asp-validation-summary="All"></div>

<div>Har du inget konto?</div>
<input type='button' value='Skapa ett här' onClick='redirectOnClick()' />
</div>
<script>
    function redirectOnClick() {
        document.location = 'register';
    }
</script>