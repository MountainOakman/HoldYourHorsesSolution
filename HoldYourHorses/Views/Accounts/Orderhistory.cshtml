@model OrderhistoryVM
@section CSS{
<link rel="stylesheet" href="~/CSS/orderhistory.css">
}
@foreach (var orderId in Model.OrderHej.OrderByDescending(o => o))
    <link rel="stylesheet" href="~/CSS/orderhistory.css">
}

<div class="artikel-container" id="container">
    <div>
@foreach (var orderId in Model.OrderHej)
{

    var hejhej = orderId;
    <div>
        <h2>Order: @orderId</h2>

        <ul>
            @foreach (var item in Model.Historik)
            {
                @if (hejhej == item.OrderId)
                {
                    <li>
                        @item.Antal st
                        @item.ArtikelNamn
                        <br />
                        Pris: @Model.getPriceFormatted(@item.Pris) kr
                    </li>
                    
                }
            }
        </ul>
        <div>
            <strong>Totalsumma:  @Model.getPriceFormatted(@Model.Historik.Where(o => o.OrderId == hejhej).Select(o => o.Pris*o.Antal).Sum()) kr</strong>
        </div>
    </div>
}
</div>
}

</div>
 </div>	